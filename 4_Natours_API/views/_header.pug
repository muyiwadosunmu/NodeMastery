header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All Tours
  div.header__logo
    img(src='/img/logo-white.png' alt='Natours Logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Logout
      a.nav__el(href='#')
        img.nav__user-img(src=`/img/users/${user.photo}.jpg` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Login
      a.nav__el.nav___el--cta(href='#') Sign up